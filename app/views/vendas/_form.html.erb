<!DOCTYPE html>
<html>

<head>
  <!-- Incluir a biblioteca jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Carregar o arquivo JavaScript para alternância de tema -->
  <!-- Incluir a referência à folha de estilo específica da view -->
  <%= yield :stylesheet %>
  <!-- tema claro e tema escuro -->
  <%= javascript_include_tag 'application' %>
</head>

<body>

  <%= form_with(model: @venda) do |form| %>
    <% if @venda.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@venda.errors.count, "error") %> prohibited this venda from being saved:</h2>
        <ul>
          <% @venda.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :product_id, "Produto" %>
      <%= form.collection_select :product_id,  Product.all, :id, :name, { prompt: "Selecione um produto" } %>
      </div>

    <div class="field">
      <%= form.label :quantidade %>
      <%= form.number_field :quantidade %>
    </div>

    <div class="field">
      <%= form.label :preco %>
      <%= form.text_field :preco %>
    </div>

    <div class="field">
      <%= form.label :data %>
      <%= form.date_field :data %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <%= link_to "Nova Venda", new_venda_path %>

</body>

</html>
