<!DOCTYPE html>
<html>
    <head>

        <% content_for :stylesheet do %>
        <%= stylesheet_link_tag 'sessions/new.css', media: 'all' %>
        <% end %>

        <!-- Incluir a referência à folha de estilo específica da view -->
        <%= yield :stylesheet %>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <%= javascript_include_tag 'application' %>
    </head>

    <body>
        <main class="form-signin">
            <div class="form-flu">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
                <%= image_tag("ruby.png", width: 100, height: 100) %>
                <h1 class="h3 mb-3 fw-normal">Sistema de Vendas</h1>

                <div class="form-floating custom-form-floating">
                <%= f.email_field :email, autofocus: true, placeholder: 'Digite seu usuário', autocomplete: 'email' %>
                </div>

                <div class="form-floating custom-form-floating">
                <%= f.password_field :password, placeholder: 'Digite sua  senha', autocomplete: 'current-password' %>
                </div>

     <% if devise_mapping.rememberable? %>
                <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                </div>
                <% end %>

            <div class="actions">
                <%= f.submit "Log in", class: (@theme == 'dark' ? 'dark' : 'light') %>
            </div>

                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </main>

                <hr>



        <footer>
            <div>
                <p>&copy; <%= Time.now.year %> Company, Inc. All rights reserved.</p>
            </div>
        </footer>

    </body>
</html>
