<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'new', media: 'all' %> <!-- Incluir a referência ao arquivo de estilo da view -->
<% end %>

<html>
  <body class="text-center">
    <main class="form-signin">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'})  do |f| %>
        <%= image_tag("ruby.png", width: 100, height: 100) %>
        <head>
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <%= yield :stylesheet %> <!-- Incluir a referência à folha de estilo específica da view -->
        </head>

        <div class="form-floating custom-form-floating">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-floating custom-form-floating">
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </main>
  </body>
</html>
